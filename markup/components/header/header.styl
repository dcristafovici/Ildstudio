body.body-promo
  .header
    margin 0 auto
    height 85px
    border-bottom 1px solid rgba(255,255,255,0.4)
    background rgba(0,0,0,0.60)
    position absolute
    left 0
    top 0
    width 100%
    z-index 10
    &-wrapper
      width calc(100% - 80px)
      height 85px
      margin 0 auto 
      display flex
      justify-content space-between
      align-items center
    &-right
      display flex
      justify-content flex-end
      align-items center
      ul.socials
        margin-right 45px
    &-left
      display flex
      align-items center
    .logo
      display block
      width 160px
      margin-right 70px
      img
        width 100%
        object-fit: contain
      + a
        font-size 16px
        font-family $Light
        color: $wh
        text-transform uppercase
        text-decoration none

    &-button
      height 40px
      display inline-flex
      align-items center
      border: 1px solid $wh
      border-radius: 3px
      text-decoration none
      padding-left 30px
      padding-right 30px
      box-sizing: border-box
      span
        font-size 14px
        text-transform uppercase
        line-height 14px
        color $wh
        font-family $Light