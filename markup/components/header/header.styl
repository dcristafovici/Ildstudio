body.body-promo
  .header
    margin 0 auto
    height 85px
    background #302e2e
    position absolute
    left 0
    top 0
    width 100%
    z-index 10
    &-wrapper
      width calc(100% - 80px)
      height 85px
      margin 0 auto 
      display flex
      justify-content space-between
      align-items center
    &-right
      display flex
      justify-content flex-end
      align-items center
      ul.socials
        margin-right 45px
        
    &-left
      display flex
      align-items center
    .logo
      display block
      width 140px
      position relative
      left -10px
      margin-right 70px
      img
        width 100%
        object-fit: contain
      + a
        font-size 16px
        font-family $Light
        color: $wh
        text-transform uppercase
        text-decoration none

    &-button
      height 40px
      display inline-flex
      align-items center
      border: 1px solid $wh
      border-radius: 3px
      text-decoration none
      padding-left 30px
      padding-right 30px
      box-sizing: border-box
      span
        font-size 14px
        text-transform uppercase
        line-height 14px
        color $wh
        font-family $Light



  .header
    transition: all 0.6s ease-in-out
    transform: translateY(-80px)
    opacity 0
  .logo,
  .toportfolio,
  .socials,
  .header-button
    transition all 0.6s ease-in-out
    transform: translateY(-20px)
    transition-delay: 0.3s
    opacity 0
  .place
    opacity 0
    transition all 0.3s ease-in-out
    transition-delay: 0.3s

  .place
    &-logo,
    &-down
      transition all 0.6s ease-in-out
      transform: translateY(-30px)
      transition-delay: 0.75s
      opacity 0
    &-down
      transition-delay: 1s



body.promo-body__loaded
  .header,
  .logo,
  .toportfolio,
  .socials,
  .header-button,
  .place-logo,
  .place-down
    transform: translateY(0)
    opacity 1
  .place
    opacity 1
  