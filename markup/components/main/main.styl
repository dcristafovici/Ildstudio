body.body-promo
  .main
    padding-bottom 110px
    background #000
    padding-top 100px
    &-text
      text-align center
      margin-bottom 100px
      p
        font-size 24px
        line-height: 34px
        color: $wh
        font-family $Light

  .ild
    &-slides
      position relative
    &-slide
      width 100%
      height 540px
      img
        width 100%
        height 100%
        object-fit: cover
  
  .ild-slider
    padding-bottom 140px
    .ild-slides.owl-carousel
      .owl-nav
        button
          position absolute
          top 50%
          z-index 5
          width 50px
          height 50px
          background #000000
          outline: none
          border-radius: 50%
          &.owl-prev
            left 30px
            background #000 url('../img/assets/main/left.svg') no-repeat center/20px
          &.owl-next
            right 30px
            background #000 url('../img/assets/main/right.svg') no-repeat center/20px
      .owl-dots
        display flex
        justify-content center
        padding-top 20px
        button.owl-dot
          padding 0
          width 12px
          height 12px
          box-sizing: border-box
          border: 1px solid $wh
          border-radius: 50%
          margin-right 20px
          outline: none
          &:last-child
            margin-right 0
          &.active
            background $wh



  .main
    &-items
      display flex
      justify-content space-between
      padding-bottom 190px
    &-item
      width 360px
      &__photo
        width 100%
        height 360px
        margin-bottom 20px
        img
          width 100%
          height 100%
          object-fit: cover
      &__title
        font-size 28px
        line-height 32px
        font-family $Bold
        color: $wh
        margin-bottom 30px
      &__text
        p
          font-size 18px
          line-height 27px
          color $wh
          font-family $Light



// Main Contacts



body.body-promo
  .main
    &-cnt
      &__title
        text-align center
        font-size 42px
        line-height 51px
        margin-bottom 30px
        color $wh
        font-family $Bold
      &__paragraph
        max-width: 560px
        text-align center
        font-size 24px
        line-height 36px
        font-family $Light
        margin 0 auto
        color $wh
        padding-bottom 70px
      &__wrapper
        display flex
        justify-content space-between
      &__left
        width 50%

      &__gen
        margin-bottom 40px
        li
          margin-bottom 10px
          &:last-child
            margin-bottom 0
          a
            text-decoration none
            color $wh
            font-size 30px
            line-height 43px
            font-family $Light
      &__address
        font-size 18px
        line-height 27px
        color $wh
        font-family $Light
        margin-bottom 20px
      &__socials
        display flex
        align-items center
        li
          margin-right 5px
          &:last-child
            margin-right 0


  .main
    &-cnt
      &__right
        width 50%


  form.main-form
    .form-group
      width 460px
      margin-bottom 20px
      &:last-child
        margin-bottom 0
      input,
      textarea
        width 100%
        height 60px
        border: 1px solid #c7c7c7
        border-radius: 6px
        box-sizing: border-box
        padding-left 10px
        padding-right 10px
        background transparent
        font-size 18px
        color $wh
        font-family $Light
        outline none
      textarea
        padding-top 10px
        height 100px
      button
        height 60px
        border: none
        width 210px
        display inline-flex
        justify-content center
        align-items center
        background $wh
        cursor pointer
        border-radius 6px
        span
          font-size 16px
          font-family $Bold
          text-transform uppercase
          color #000