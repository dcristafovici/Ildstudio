body.body-promo
  .place  
    height 100vh
    box-sizing: border-box
    background url('../img/assets/place/bg.jpg') no-repeat center/cover
    position relative
    &::before
      content ''
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      background linear-gradient(to bottom, rgba(0,0,0,0.0), rgba(0,0,0,1))
    .content
      position relative
      z-index 3
    &-logo
      display flex
      justify-content center
      align-items center
      max-width: 450px
      img
        width 100%
        object-fit: contain
    .content
      display flex
      justify-content center
      align-items center
      height 100%

    &-down
      position absolute
      z-index 4
      left 50%
      margin-left -20px
      cursor pointer
      bottom 40px
      width 40px
      height 25px
      animation: t-arw 1.7s infinite ease


  @keyframes t-arw
    0%
      transform: translateY(0)
    50% 
      transform: translateY(-7px)
    55% 
      transform: translateY(-7px)
    100% 
      transform: translateY(0)
    
