body
  min-width: 320px
  overflow-x hidden
  font-size 16px  
  font-family $Light
  // background $bk

.content
  width 1170px
  margin 0 auto

ul.socials
  display flex
  align-items center
  li
    margin-right 15px
    a
      display flex
      justify-content center  
      align-items center
      width 30px
      height 30px
      img
        width 100%
        height 100%
        object-fit: contain
    &:last-child
      margin-right 0