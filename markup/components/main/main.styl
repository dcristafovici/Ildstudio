body.body-promo
  .main
    background #000
    padding-top 100px
    &-text
      text-align center
      margin-bottom 100px
      p
        font-size 24px
        line-height: 34px
        color: $wh
        font-family $Light

  .ild
    &-slides
      position relative
    &-slide
      width 100%
      height 540px
      img
        width 100%
        height 100%
        object-fit: cover
  
  .ild-slider
    padding-bottom 140px
    .ild-slides.owl-carousel
      .owl-nav
        button
          position absolute
          top 50%
          z-index 5
          width 50px
          height 50px
          background #000000
          outline: none
          border-radius: 50%
          &.owl-prev
            left 30px
            background #000 url('../img/assets/main/left.svg') no-repeat center/20px
          &.owl-next
            right 30px
            background #000 url('../img/assets/main/right.svg') no-repeat center/20px
      .owl-dots
        display flex
        justify-content center
        padding-top 20px
        button.owl-dot
          padding 0
          width 12px
          height 12px
          box-sizing: border-box
          border: 1px solid $wh
          border-radius: 50%
          margin-right 20px
          outline: none
          &:last-child
            margin-right 0
          &.active
            background $wh



  .main
    &-items
      display flex
      justify-content space-between
      padding-bottom 190px
    &-item
      width 360px
      &__photo
        width 100%
        height 360px
        margin-bottom 20px
        img
          width 100%
          height 100%
          object-fit: cover
      &__title
        font-size 28px
        line-height 32px
        font-family $Bold
        color: $wh
        margin-bottom 30px
      &__text
        p
          font-size 18px
          line-height 27px
          color $wh
          font-family $Light